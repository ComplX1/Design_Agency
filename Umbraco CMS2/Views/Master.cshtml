@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
	var home = @CurrentPage.Site();
}

<!DOCTYPE html>
<html lang="en">
  <head>

    <!-- Meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="@CurrentPage.siteDescription">

    <title>@CurrentPage.Name</title>
	
	<!-- Fonts -->
	<link href="//fonts.googleapis.com/css?family=Merriweather:400,700,300,900" rel="stylesheet" type="text/css">
	<link href="//fonts.googleapis.com/css?family=Lato:300,400,700,900" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
	
    <!-- CSS -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    
  

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="//oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
  	<div class="col-centred main">
	    <div id="header-container">
		    <header class="clearfix">
                <div class="col-md-1 col-lg-1"></div>
                <div class="col-md-3">
                    <img src="/Media/Images/Logo.png" />
                </div>
			    
			    <nav class="col-md-7">
                    <div class="row text-right">
                        <span>Call our recovery Helpline: </span>
                        <span class="telephone">@Umbraco.Field("telephoneNumber")</span>
                        <a href="/login" class="button login"><span class="login-text">Login</span></a>
                    </div>
                    <div class="row nav-row">
                        <ul>
					        <li><a href="#" class="dotty">Home</a></li>
					        <li><a href="#" class="dotty">About</a></li>
					        <li><a href="#" class="dotty">Solutions</a></li>
							<li><a href="#" class="dotty">For Sale</a></li>
							<li><a href="#" class="dotty">News</a></li>
							<li><a href="#" class="dotty">Contact</a></li>
				        </ul>
                    </div>
				    
			    </nav>

                <div class="col-md-1"></div>
		    </header>
	    </div>
        @RenderBody()

        <footer>
		      @{ Html.RenderPartial("BottomNavigation"); }
        </footer> 
	</div>

 </body>
    <!-- Javascripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  
</html>